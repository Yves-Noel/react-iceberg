{
    "name": "react-iceberg",

    "dockerComposeFile": "./docker-compose.yml",
    "service": "dev",
    "runServices": ["dev", "minio", "initContainer"],
    "workspaceFolder": "/workspaces/react-iceberg",
    "mounts": [
        // use empty local volumes for node_modules (keeping file operations local to docker)
        // "type=tmpfs,target=/workspaces/react-iceberg/node_modules",
        // "type=tmpfs,target=/workspaces/react-iceberg/test/app/node_modules"
    ],
    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },

    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        "ms-python.python",
        "dvirtz.parquet-viewer",
        "ms-toolsai.jupyter",
        "doggy8088.quicktype-refresh",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
    ],

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [4040, 4041, 9000, 3000],
    "postStartCommand": "npm ci",
    "postAttachCommand": ["bash", "-c", "-i", "./test/setup-test-data-s3.sh"],
    "shutdownAction": "stopCompose",

    "remoteUser": "vscode"
}
